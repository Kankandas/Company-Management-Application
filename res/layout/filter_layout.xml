<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Sort By"
        android:textSize="15dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/black"
        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroupFilterLayout">
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Project"
            android:textSize="15dp"
            android:textColor="@android:color/holo_red_light"
            android:id="@+id/radioButtonAllProjectFilterLayout"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pending Project"
            android:textSize="15dp"
            android:textColor="@android:color/holo_red_light"
            android:id="@+id/radioButtonPendingProjectFilterLayout"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complete Project"
            android:textSize="15dp"
            android:textColor="@android:color/holo_red_light"
            android:id="@+id/radioButtonCompleteProjectFilterLayout"
            />


    </RadioGroup>

</LinearLayout>